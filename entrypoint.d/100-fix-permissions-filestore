#!/bin/bash
set -e

# Directory where Odoo stores its filestore (adjust if needed)
FILESTORE_DIR="/home/odoo/data"

# Ensure the directory exists
mkdir -p "$FILESTORE_DIR"

# Fix ownership (recursive only if needed for performance)
chown -R odoo:odoo "$FILESTORE_DIR"

# Drop privileges before running the main process
exec gosu odoo "$@"
